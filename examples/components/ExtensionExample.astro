// Splide configuration  -  require npm install astro-splide @splidejs/splide-extension-auto-scroll
import "@splidejs/splide/css"
import { SplideExtension, SplideSlide } from 'astro-splide';
import type { Options } from '@splidejs/splide';

const options: Options = {
  type   : 'loop',
  drag   : 'free',
  focus  : 'center',
  perPage: 3,
  autoScroll: {
    speed: 1,
  },
}

// Misc import for this demo
import "./style.css"
import { imgUrls } from './imgUrls'

---

<SplideExtension
  options={options}
  aria-labelledby="extension-example-heading"
>
  {
    imgUrls.map(url => (
      <SplideSlide>
        <img src={url} alt=''/>
      </SplideSlide>
    ))
  }
</SplideExtension>

<script>
  import { AutoScroll } from '@splidejs/splide-extension-auto-scroll';
  import { initSplideExtension } from "astro-splide/js/splideExtensionUtils"
  initSplideExtension({AutoScroll})
</script>
