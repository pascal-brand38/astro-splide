{
  "name": "astro-splide",
  "version": "1.2.0",
  "description": "The native Astro component for the Splide slider/carousel.",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc -p tsconfig.json",
    "postbuild": "cp src/*.astro dist && concat dist/index.js src/components.d.ts -o dist/index.js && concat dist/index.d.ts src/components.d.ts -o dist/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pascal-brand38/astro-dev.git",
    "directory": "packages/astro-splide"
  },
  "author": "Pascal Brand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pascal-brand38/astro-dev/issues"
  },
  "homepage": "https://github.com/pascal-brand38/astro-dev/tree/main/packages/astro-splide#readme",
  "devDependencies": {
    "@types/node": "^22.7.7",
    "astro": "^4.16.7",
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": {
      "types": [
        "./dist/index.d.ts",
        "./dist/components.d.ts"
      ],
      "default": "./dist/index.js"
    },
    "./Splide": "./dist/Splide.astro",
    "./SplideTrack": "./dist/SplideTrack.astro",
    "./SplideSplide": "./dist/SplideSplide.astro"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "withastro",
    "astro-component",
    "splide",
    "splidejs",
    "@splidejs/splide"
  ],
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "concat": "^1.0.3"
  }
}
